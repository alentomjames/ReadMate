{
  "manifest_version": 3,
  "name": "ReadMate",
  "description": "TTS browser extension to help those with learning disabilities",
  "version": "0.0.1",
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "tts",
    "contextMenus"
  ],
  "background": {
    "service_worker": "scripts/background.js"
  },
  "action": {
    "default_popup": "src/readmate.html",
    "default_icon": {
      "16": "icons/readmate16.png",
      "32": "icons/readmate32.png",
      "48": "icons/readmate48.png",
      "128": "icons/readmate128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["scripts/magnifier.js"],
      "css": ["src/readmate.css"]
    }
  ],
  "icons": {
    "16": "icons/readmate16.png",
    "32": "icons/readmate32.png",
    "48": "icons/readmate48.png",
    "128": "icons/readmate128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["scripts/iro.min.js","scripts/magnifier.js", "src/readmate.css"],
      "matches": ["<all_urls>"]
    }
  ],
"content_security_policy": {
  "extension_pages": "script-src 'self'; object-src 'self';"
}
}
